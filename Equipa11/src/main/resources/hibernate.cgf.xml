<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
 	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 	
<hibernate-configuration>
 	<session-factory>
 		<!-- Database connection settings -->
 	<!-- Set the Driver Class -->
 	<property
name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
 	<!-- Set URL -->
 	<property
name="connection.url">jdbc:mysql://localhost:3306/equipa11</property>
 	<!--Let Hibernate generate the tables-->
 	<property name="hibernate.hbm2ddl.auto">update</property>
 	<!-- Set the user name -->
 	<property name="connection.username">root</property>
 	<!-- Set the password - write the pwd you choose when installing MySQL -->
 	<property name="connection.password">01072006</property>
 	<!-- Echo all executed SQL to stdout -->
 	
 	<property name="show_sql">true</property>
 	<!-- Set the annotated classes (inform the complete namespace) -->
 	
 	<mapping class="upt.lp.hibernateintro.Course" />
 	<mapping class="upt.lp.hibernateintro.Student" />
 </session-factory>
</hibernate-configuration>
